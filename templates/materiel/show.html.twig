{% extends 'base.html.twig' %}

{% block title %}Matériel{% endblock %}

{% block content %}


        <div class="mb-8">
            <a href="{{ getReferer() }}" class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Retour à la liste</a>
        </div>
    
        <div class="overflow-hidden bg-white shadow sm:rounded-lg max-w-4xl mx-auto mb-6">
            <div class="px-4 py-6 sm:px-6 flex justify-between items-center">
              <div class="">
                <h3 class="text-xl font-semibold leading-7 text-gray-900">{{ materiel.nom }}</h3>
              </div>
              <div>
                  {% if is_granted('ROLE_materiel_EDIT') %}
                  <a href="{{ path('materiel_edit', {'id': materiel.id}) }}" class="block rounded-md bg-teal-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600">Modifier</a>
                  {% endif %}
              </div>
          </div>
          <div class="border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-900">Matériel</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ materiel.nom }}</dd>
              </div>
              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-900">Référence</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ materiel.reference }}</dd>
              </div>
              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-900">Propriétaire</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ materiel.proprietaire ?? '-'}}</dd>
              </div>
              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-900">Emprunteur</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ materiel.emprunteur ?? '-' }}</dd>
              </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <img src="{{ materiel.reference|qrcode }}" width="200px" height="200px">
                </div>

            </dl>
          </div>
        </div>
        
        {{ include('materiel/_historique_pret.html.twig') }}
    

{% endblock %}
