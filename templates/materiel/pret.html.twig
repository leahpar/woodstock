{% extends 'base.html.twig' %}

{% block content %}

    <div class="max-w-2xl mx-auto">

        <div class="md:flex md:items-center md:justify-between mb-8">
            <div class="min-w-0 flex-1">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                     Prêt de {{ materiel.nom }}
                </h2>
            </div>
            <div class="mt-4 flex md:ml-4 md:mt-0">
            </div>
        </div>

        <div class="formWrapper">

            <form method="post">
                {{ form_widget(form._token) }}

                {{ form_errors(form) }}

                <div class="space-y-12">
                    <div class="formSection">

                        <div>
                            <h2>Détail du prêt</h2>
                        </div>

                        <div class="formGrid">

                            <div class="col-span-full">
                                {{ form_label(form.datePret, 'Date de prêt') }}
                                <div class="mt-2">
                                    {{ form_widget(form.datePret) }}
                                </div>
                                <div class="formErrors">
                                    {{ form_errors(form.datePret) }}
                                </div>
                            </div>

                            <div class="col-span-full">
                                {{ form_label(form.user, 'Emprunteur') }}
                                <div class="mt-2">
                                    {{ form_widget(form.user) }}
                                </div>
                                <div class="formErrors">
                                    {{ form_errors(form.user) }}
                                </div>
                            </div>

                            <div class="col-span-full">
                                {{ form_label(form.dateRetour, 'Date de retour') }}
                                <div class="mt-2">
                                    {{ form_widget(form.dateRetour) }}
                                </div>
                                <div class="formErrors">
                                    {{ form_errors(form.dateRetour) }}
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="mt-6 flex items-center justify-end gap-x-6">
                    <button type="submit" class="rounded-md bg-teal-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600">Enregistrer</button>
                </div>
            </form>

        </div>
    </div>

{% endblock %}
