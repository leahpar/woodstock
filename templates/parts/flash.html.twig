<!-- Global notification live region, render this permanently at the end of the document -->
<div aria-live="assertive" class="pointer-events-none fixed z-50 inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    
    {# read and display all flash messages #}
    {# label : 'notice', 'success', 'warning', 'error' #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
    
            <div class="flash_message pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
              <div class="p-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                      
                      {% if label == 'notice' %}
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-blue-400">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
                          </svg>
                      {% elseif label == 'success' %}
                          <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                      {% elseif label == 'warning' %}
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-orange-400">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                          </svg>

                      {% elseif label == 'error' %}
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-red-400">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                      {% endif %}
                      
                    
                  </div>
                  <div class="ml-3 w-0 flex-1 pt-0.5">
                      
                        {% if label == 'notice' %}
                            <p class="text-sm font-medium text-gray-900">Information :</p>
                        {% elseif label == 'success' %}
                            <p class="text-sm font-medium text-gray-900">C'est un succ√®s !</p>
                        {% elseif label == 'warning' %}
                            <p class="text-sm font-medium text-gray-900">Attention !</p>
                        {% elseif label == 'error' %}
                            <p class="text-sm font-medium text-gray-900">Erreur !</p>
                        {% endif %}
                        
                    <p class="mt-1 text-sm text-gray-500">{{ message|raw }}</p>
                  </div>
                  <div class="ml-4 flex flex-shrink-0">
                    <button type="button" class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                      <span class="sr-only">Close</span>
                      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
    
        {% endfor %}
    {% endfor %}
    
  </div>
</div>

<script>
    // close flash message
    document.addEventListener('DOMContentLoaded', function() {
        // foreach flash message
        document.querySelectorAll('.flash_message').forEach(function(el) {
            // add event click
            el.addEventListener('click', function() {
                // remove element
                el.remove();
            });
        });
    }, false);
</script>

