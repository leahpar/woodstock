<div class="flex gap-2">

    <form method="get" class="contents">

        <input type="text" name="search" placeholder="Rechercher..." value="{{ search.search }}" class="border-gray-200 rounded-lg">

        {% if search.target == 'Reference' %}
            <select name="categorie" class="border-gray-200 rounded-lg">
                <option value="">Toutes les catégories</option>
                {% for categorie in getReferenceCategories() %}
                    <option value="{{ categorie }}" {{ categorie == search.categorie ? "selected" }}>{{ categorie }}</option>
                {% endfor %}
            </select>
        {% endif %}

        {% if search.target == 'Materiel' %}

            <select name="categorie" class="border-gray-200 rounded-lg">
                <option value="">Toutes les catégories</option>
                {% for categorie in getMaterielCategories() %}
                    <option value="{{ categorie }}" {{ categorie == search.categorie ? "selected" }}>{{ categorie }}</option>
                {% endfor %}
            </select>

