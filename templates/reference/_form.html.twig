<form method="post">
    {{ form_widget(form._token) }}

    {{ form_errors(form) }}

    {{ form_row(form.reference, {label: "Référence"}) }}
    {{ form_row(form.nom, {label: "Nom"}) }}
    {{ form_row(form.conditionnement, {label: "Conditionnement"}) }}

    <div>
        <button>Enregistrer</button>
    </div>

    {% if reference.id %}
        {{ include('reference/_delete_form.html.twig') }}
    {% endif %}

</form>
