<div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto lg:overflow-visible sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <div class="">

                <table class="mainTable ">

                    <thead class="">
                    <tr class="lg:!top-14">
                        {% from "parts/macros.html.twig" import thSort %}

                        <th scope="col" class="min-w-[12rem]">{{ thSort('nom', 'Nom') }}</th>
                        <th scope="col">{{ thSort('marque', 'Marque') }}</th>
                        <th scope="col">{{ thSort('categorie', 'Catégorie') }}</th>
                        <th scope="col">{{ thSort('reference', 'Référence') }}</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Conditionnement</th>
                        <th scope="col">{{ thSort('seuil', 'Seuil') }}</th>
                        <th scope="col">{{ thSort('prix', 'Prix') }}</th>
                        <th scope="col">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                    </thead>

                    <tbody>

                    {% for reference in references %}

                        <tr>
                            <td class="font-medium !text-gray-900">
                                <a href="{{ path('reference_show', {'id': reference.id}) }}">{{ reference.nom }}</a>
                            </td>
                            <td>{{ reference.marque ?? '-' }}</td>
                            <td>{{ reference.categorie ?? '-' }}</td>
                            <td>{{ reference.reference }}</td>
                            <td>{{ reference.quantite }}</td>
                            <td>{{ reference.conditionnement }}</td>
                            <td>{{ reference.seuil ?? '-' }}</td>
                            <td>{{ reference.prix ?? '-' }}</td>
                            <td class="text-right font-medium sm:pr-3">
                                <a href="{{ path('reference_show', {'id': reference.id}) }}" class="text-teal-600 hover:text-teal-900">Afficher<span class="sr-only">, {{ reference.nom }}</span></a>
                                {% if is_granted('ROLE_REFERENCE_EDIT') %}
                                <a href="{{ path('reference_edit', {'id': reference.id}) }}" class="text-teal-600 hover:text-teal-900">Modifier<span class="sr-only">, {{ reference.nom }}</span></a>
                                <a href="{{ path('reference_new', {'id': reference.id}) }}" class="text-teal-600 hover:text-teal-900">Dupliquer<span class="sr-only">, {{ reference.nom }}</span></a>
                                {% endif %}
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td colspan="99">Aucun stock</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
