                                        {% set heures = -(0 - chantier.heures('restant')) %}
                                        {% set montant = -(0 - chantier.montant('restant')) %}
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right font-medium">{{ heures>0?'+' }}{{ heures }} h<br>{{ montant>0?'+' }}{{ montant|euro }}</td>
                                </tr>
    
                            </tbody>
                            <thead class="bg-gray-50">
                            <tr>
                                <th scope="col"
                                    class="py-3.5 pl-4 pr-3 text-left text-sm font-bold text-gray-900 sm:pl-6 uppercase">Résultat affaire</th>
                                <th scope="col"
                                    class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 text-right">
                                    Achat
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 text-right">
                                    Heures
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 text-right">
                                    Résultat
                                </th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm  text-gray-900 sm:pl-6">
                                            <strong>Global (reste)</strong>
                                        </td>
                                        {%  set montantAchat = - (chantier.budgetStock - chantier.budgetAchat) %}
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right">{{ montantAchat>0?'+' }}{{ montantAchat|euro }}</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right">{{ montant>0?'+' }}{{ montant|euro }}</td>
                                        {% set total = montantAchat +  montant %}
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right font-medium">{{ total>0?'+' }}{{ total|euro }}</td>
                                </tr>
                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


