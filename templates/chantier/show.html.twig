{% extends 'base.html.twig' %}

{% block title %}chantier{% endblock %}

{% block content %}
    <h1>chantier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ chantier.nom }}</td>
            </tr>
            <tr>
                <th>Référence travaux</th>
                <td>{{ chantier.referenceTravaux }}</td>
            </tr>
            <tr>
                <th>Référence BE</th>
                <td>{{ chantier.referenceEtude }}</td>
            </tr>
            <tr>
                <th>En cours</th>
                <td>{{ chantier.encours ? 'OUI' : 'NON' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ chantier.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('chantier_index') }}">back to list</a>

    <a href="{{ path('chantier_edit', {'id': chantier.id}) }}">edit</a>

    {{ include('chantier/_delete_form.html.twig') }}
{% endblock %}
