                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right">{{ chantier.heures('devis', 'atelier') }} h<br>{{ chantier.montant('devis', 'atelier')|euro }}</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right">{{ chantier.heures('passe', 'atelier') }} h<br>{{ chantier.montant('passe', 'atelier')|euro }}</td>
                                        {% set resteH = chantier.heures('devis', 'atelier') - chantier.heures('passe', 'atelier') %}
                                        {% set resteE = chantier.montant('devis', 'atelier') - chantier.montant('passe', 'atelier') %}
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right font-medium">{{ resteH }} h<br>{{ resteE|euro }}</td>
                                </tr>
                                
                                <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm  text-gray-900 sm:pl-6">
                                            <strong>Heures globale</strong><br>
